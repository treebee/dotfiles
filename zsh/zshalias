# ls
alias ls='ls --color -phFX --group-directories-first'
alias la='ls -a'
alias ll='ls -l'
alias l='ls -l'
alias ltr='ls -ltr'

# misc
alias ..='cd ..'
alias grep='grep -nI --color'
alias ps='ps -ef'
alias james="ssh -t patrick@neubau-55-027.mi.uni-erlangen.de tmux attach -t 0"

# security
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# use advcopy/-move if available
if [ -e /usr/bin/vcp ] ; then
    alias cp='vcp -gi'
fi
if [ -e /usr/bin/vmv ] ; then
    alias mv='vmv -gi'
fi

# virtualenvwrapper
alias mkvirtualenv2="mkvirtualenv --python=/usr/bin/python2"

alias lotr="wine $HOME/.wine/drive_c/Program\ Files\ \(x86\)/EA\ GAMES/Die\ Schlacht\ um\ Mittelerde\(tm\)/lotrbfme.exe"

