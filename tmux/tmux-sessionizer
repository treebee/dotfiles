#!/usr/bin/env zsh

tmux_running=$(pgrep tmux)
fd="/usr/bin/fdfind"

if [[ "$(uname)" == "Darwin" ]]; then
    fd="/opt/homebrew/bin/fd"
fi

if [[ $# -eq 1 ]]; then
    project_files=$1
else
    project_files=("$HOME/dotfiles")
    
    selected=$(for f in $($fd -HI .git$ --min-depth=1 --max-depth=3 --prune ~ ~/workspace/github); do
        echo $f
    done | uniq | sed -E 's/\.git\/?$//' | sed -e 's/\/$//' | fzf-tmux -p 70%)
    
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    cd $selected
    tmux new-session -s $selected_name -c $selected
    tmux send-keys -t $selected_name ". ~/dotfiles/tmux/init-session" c-M
    exit 0
fi

if ! tmux has-session -t=$selected_name 6> /dev/null; then
    cd $selected
    tmux new-session -ds $selected_name -c $selected
    tmux send-keys -t $selected_name ". ~/dotfiles/tmux/init-session" c-M
fi

if [[ -z $TMUX ]]; then
    tmux attach-session -t $selected_name
else
    tmux switch-client -t $selected_name
fi
